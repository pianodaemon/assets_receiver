#ifndef __HELIX_AGENTAPP_STANDALONE_HPP__
#define __HELIX_AGENTAPP_STANDALONE_HPP__

#include "skeleton/app_stand_alone.hpp"

//!=================================================================
//!
//! \brief
//!     Class to execute Assets Receiver app in standalone mode.
//!
//==================================================================
class assets_receiver : public app_stand_alone
{
    public:

        //!=========================================================
        //!
        //! \brief
        //!     Class constructor.
        //!
        assets_receiver( const char* appName , int argc , char **argv );


        //!=========================================================
        //!
        //! \brief
        //!     Class destructor.
        //!
        virtual ~assets_receiver();

    private:

        //!=========================================================
        //!
        //! \brief
        //!      Init the logger Engine selected.
        //!
        //! \return
        //!     int.
        //!
        int run_logger();

        //!=========================================================
        //!
        //! \brief
        //!      Validate the command line params.
        //!
        //! \return
        //!     int.
        //!
        int validate_params();

        //!=========================================================
        //!
        //! \brief
        //!      Execute Application in standalone mode
        //!
        //! \return
        //!     int.
        //!
        int start();


    private:

        int m_argc;
        char **m_argv;

};

#endif  /* __HELIX_AGENTAPP_STANDALONE_HPP__ */
